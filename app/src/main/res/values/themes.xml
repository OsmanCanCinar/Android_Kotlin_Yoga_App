<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Splash Screen-->
    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_img</item>
        <item name="android:statusBarColor">@color/splash_img_background</item>
    </style>


    <!-- Drawer Related-->
    <style name="DrawerColor" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/light_color</item>
    </style>


    <!-- App Theme-->
    <style name="Theme.YogaApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/blackish</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerColor</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <!-- Greet Fragment-->
    <style name="GreetTitleStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/medium_italic</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/lightest_color</item>
        <item name="android:textSize">@dimen/greet_title_font_size</item>
        <item name="android:text">@string/welcome_to_yoga_app</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="GreetButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/reddish_color</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/lightest_color</item>
        <item name="android:textSize">@dimen/greet_btn_txt_size</item>
        <item name="cornerRadius">@dimen/btn_corner_radius</item>
    </style>

    <style name="GreetTermsStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:text">@string/terms_text</item>
        <item name="android:textColor">@color/toolbar_color</item>
        <item name="android:textSize">@dimen/terms_txt_size</item>
    </style>


    <!-- Sign Up - In & Reset Fragment-->
    <style name="SigningTitleStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/semi_bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/light_color</item>
        <item name="android:textSize">@dimen/sign_up_txt_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SigningTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColorHint">@color/grayish_color</item>
        <item name="boxStrokeColor">@color/light_color</item>
        <item name="boxStrokeErrorColor">@color/reddish_color</item>
        <item name="counterOverflowTextColor">@color/reddish_color</item>
        <item name="counterTextColor">@color/light_color</item>
        <item name="errorIconTint">@color/reddish_color</item>
        <item name="errorTextColor">@color/reddish_color</item>
        <item name="helperTextTextColor">@color/light_color</item>
        <item name="hintTextColor">@color/light_color</item>
        <item name="passwordToggleTint">@color/light_color</item>
        <item name="startIconTint">@color/light_color</item>
    </style>

    <style name="SigningTextInputEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/light_italic</item>
        <item name="android:maxLength">16</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/light_color</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/regular</item>
        <item name="cornerRadius">@dimen/btn_corner_radius</item>
        <item name="strokeColor">@color/toolbar_color</item>
        <item name="android:textColor">@color/toolbar_color</item>
    </style>

    <style name="DenseButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/regular</item>
        <item name="cornerRadius">@dimen/btn_corner_radius</item>
        <item name="android:backgroundTint">@color/toolbar_color</item>
        <item name="android:textColor">@color/lightest_color</item>
    </style>

    <style name="SigningDirectToText" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/light_italic</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/lightest_color</item>
        <item name="android:textSize">@dimen/already_have_an_account_txt</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ClickableView">
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

</resources>