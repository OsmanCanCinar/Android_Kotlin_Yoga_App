<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <data>
            <variable
                name="meditationCategory"
                type="com.osmancancinar.yogaapp.data.model.MeditationCategory" />

            <variable
                name="listener"
                type="com.osmancancinar.yogaapp.adapter.MeditationCategoryListener" />
        </data>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/linearMeditation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:clickable="true"
                android:elevation="7dp"
                android:focusable="true"
                app:cardCornerRadius="15dp"
                app:categoryColor="@{meditationCategory}"
                android:onClick="@{() -> listener.onClick(meditationCategory)}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/meditation_row_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/light_italic"
                    android:gravity="center"
                    android:lines="2"
                    android:padding="5dp"
                    android:textColor="@color/lightest_color"
                    android:textSize="25sp"
                    tools:text="yoga"
                    app:categoryName="@{meditationCategory}"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>