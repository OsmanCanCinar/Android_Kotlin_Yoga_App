<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="meditation"
            type="com.osmancancinar.yogaapp.models.Meditation" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- app:cardBackgroundColor="@{Integer.valueOf(meditation.colorCode)}" -->

        <androidx.cardview.widget.CardView
            android:id="@+id/linearMeditation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:clickable="true"
            android:elevation="7dp"
            android:focusable="true"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical">

                <TextView
                    android:padding="5dp"
                    android:id="@+id/meditation_row_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:lines="2"
                    android:textColor="@color/lightest_color"
                    android:fontFamily="@font/lightitalic"
                    android:textSize="25sp"
                    tools:text="yoga" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>