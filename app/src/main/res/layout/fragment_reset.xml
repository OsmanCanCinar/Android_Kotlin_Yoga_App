<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.auth.ResetFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailTextInputLayoutReset"
        style="@style/SigningTextInputLayoutStyle"
        app:startIconDrawable="@drawable/ic_baseline_email_24"
        android:hint="@string/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="150dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailTextReset"
            style="@style/SigningTextInputEditTextStyle"
            android:maxLength="30"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/reset_button"
        style="@style/DenseButton"
        android:textAllCaps="false"
        android:text="@string/reset_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/emailTextInputLayoutReset"
        app:layout_constraintStart_toStartOf="@id/emailTextInputLayoutReset"
        app:layout_constraintTop_toBottomOf="@id/emailTextInputLayoutReset"

        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>