<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.view.home.meditation.MeditationDetailFragment">

    <data>
        <variable
            name="selectedMeditation"
            type="com.osmancancinar.yogaapp.data.model.MeditationCategory" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/meditationCover"
            android:layout_width="200dp"
            android:layout_height="200dp"
            downloadMeditationCover="@{selectedMeditation}"
            />
        <!--   -->

        <SeekBar
            android:id="@+id/positionBar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/elapsedTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="0:11"
                android:textColor="#063852"
                android:layout_marginStart="40dp"/>

            <TextView
                android:id="@+id/remainingTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="-1:11"
                android:textColor="#063852"
                android:layout_marginStart="240dp"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/pauseBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_baseline_pause"
            android:layout_margin="20dp" />

        <ImageButton
            android:id="@+id/playBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_baseline_play"
            android:layout_margin="20dp" />

        <ImageButton
            android:id="@+id/stopBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_baseline_stop"
            android:layout_margin="20dp" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/volumeDown"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_volume_down"/>

            <SeekBar
                android:id="@+id/volumeBar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:progress="50"
                android:max="100"/>

            <ImageView
                android:id="@+id/volumeUp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_volume_up"/>

        </LinearLayout>
    </LinearLayout>
</layout>